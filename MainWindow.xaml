<Window x:Class="Cat_Win8_Start_Menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cat_Win8_Start_Menu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Topmost="True" ShowInTaskbar="False" AllowsTransparency="True" ResizeMode="NoResize" WindowStyle="None" Background="#FF0069B7">
    <Grid>
        <TextBlock x:Name="TitleTB" Text="Apps" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,47,0,0" FontWeight="Light" FontSize="52">
            <TextBlock.Effect>
                <DropShadowEffect Opacity="0"/>
            </TextBlock.Effect>
        </TextBlock>
        <ScrollViewer x:Name="SViewer" FocusVisualStyle="{x:Null}" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden">
            <WrapPanel x:Name="ProgramList" Orientation="Vertical" Margin="118,154,118,50" ItemWidth="210"/>
        </ScrollViewer>
    </Grid>
</Window>
